<div class="row justify-space-between-md">
  <div class="card login-card">
    <div class="card-header login-head">Login</div>

    <div class="card-body">   
      <form class="form login-form">
        <div class="form-group">
          <label for="email-login">Email:</label>
          <input class="form-input" type="text" id="email-login" />
        </div>
        <div class="form-group">
          <label for="password-login">Password:</label>
          <input class="form-input" type="password" id="password-login" />
        </div>
        <div class="form-group">
          <button class="btn btn-dark btn-login" type="submit">Login!</button>
        </div>
        <div><a href="">Sign Up Instead</a></div>
      </form>
    </div>
  </div>
</div>

<script src="./js/login.js"></script>